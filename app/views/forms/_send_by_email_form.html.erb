<%= form_tag('/forms/send', remote: true) do  %>
<h3>Envoyer ce formulaire</h3>

  <div class="form-group">
    <div class="row">
        <div class="col-md-6"><%= label_tag :email, 'Email' %></div>
        <div class="col-md-6 text-right"><%= link_to 'client' %> | <%= link_to 'backoffice' %></div>
    </div>
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :content, 'Message' %>
    <%= text_area_tag :content, nil, class: 'form-control', rows: '8' %>
  </div>

  <%= submit_tag 'Envoyer', class: 'btn btn-primary' %>
<% end %>
