<div class="container">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header"><%= t('.sign_in', :default => "Sign in") %>
              <small></small>
          </h1>
      </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-5 col-md-5">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> <%= t('activerecord.attributes.user.remember_me', :default => "Sign in") %>
            <% end %>
          </div>
        <% end -%>

        <%= f.submit t('.sign_in', :default => "Sign in"), class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-offset-3 col-sm-4 col-md-offset-3 col-md-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
